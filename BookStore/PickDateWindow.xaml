<Window x:Class="BookStore.PickDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="PickDateWindow" Height="400" Width="300">
    <Canvas>
        <Calendar x:Name="Calendar" Canvas.Left="42" Canvas.Top="25" Height="182" Width="216" />
        <Button  x:Name="okButton" IsDefault="True" Content="OK" Canvas.Left="42" Canvas.Top="288" Height="35" Width="80" Click="OKButton_Click"></Button>
        <Button x:Name="cancelButton" IsCancel="True" Content="Cancel" Height="35" Width="80" Canvas.Left="178" Canvas.Top="288"></Button>
    </Canvas>
</Window>
