<Window x:Class="BookStore.addCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="Add New Category" Height="200" Width="400">
    <Canvas>
        <TextBox Name="newCategoryTextBox" Text="{Binding Name}" Width="381" Height="59" Canvas.Left="10" Canvas.Top="33"></TextBox>
        <Button Name="okBtn" IsDefault="True" Content="OK" Width="80" Height="36" Click="okBtn_Click" Canvas.Left="91" Canvas.Top="113"/>
        <Button Name="cancelBtn" IsCancel="True" Content="Cancel" Width="80" Height="35" Canvas.Left="229" Canvas.Top="118"/>
    </Canvas>
</Window>
