<Window x:Class="BookStore.UpdateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="UpdateCategoryWindow" Height="200" Width="400">
    <Canvas>
        <ComboBox Name="updateCategoriesComboBox" Width="200" Height="35" Canvas.Left="100" Canvas.Top="10" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox Name="NewName" Text="{Binding Name}" Canvas.Left="100" Canvas.Top="65" Width="200" Height="27"></TextBox>
        <Button Name="okBtn" IsDefault="True" Content="OK" Width="80" Height="36" Click="okBtn_Click" Canvas.Left="91" Canvas.Top="113"/>
        <Button Name="cancelBtn" IsCancel="True" Content="Cancel" Width="80" Height="35" Canvas.Left="232" Canvas.Top="114" RenderTransformOrigin="0.471,0.142"/>
    </Canvas>
</Window>
