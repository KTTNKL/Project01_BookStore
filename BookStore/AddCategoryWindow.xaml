<Window x:Class="BookStore.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="Category Name:" Canvas.Left="149" Canvas.Top="81"></Label>
        <TextBox x:Name="categoryNameTextBox" Height="50" Width="500" Canvas.Left="150" Canvas.Top="112" Text="{Binding Name}"></TextBox>
        <Button x:Name="OKButton" IsDefault="True" Height="35" Width="80" Content="OK" Click="OKButton_Click" Canvas.Left="232" Canvas.Top="242"></Button>
        <Button x:Name="cancelButton" IsCancel="True" Content="Cancel" Height="35" Width="80" Canvas.Left="466" Canvas.Top="242" ></Button>
        
    </Canvas>
</Window>
