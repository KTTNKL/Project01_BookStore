<Window x:Class="BookStore.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="LoginScreen" Height="400" Width="400" Loaded="Window_Loaded">
    <Grid>
        <Canvas>
            <Label Content="Please enter _Username:" Target="{Binding ElementName=usernameTextBox}" Canvas.Left="88" Canvas.Top="90"/>
            <TextBox x:Name="usernameTextBox" Width="228" Height="35" Padding="8" Canvas.Left="88" Canvas.Top="131"/>
            <Label Content="Please enter _Password:" Target="{Binding ElementName=passwordTextBox}" Canvas.Left="92" Canvas.Top="171" />
            <PasswordBox x:Name="passwordTextBox" Width="228" Height="35" Padding="8" Canvas.Left="88" Canvas.Top="219" />
            <Button x:Name="loginButton" IsDefault="True" Click="loginButton_Click" Content="Đăng nhập" Width="80" Height="35" Canvas.Left="155" Canvas.Top="293" />
        </Canvas>
    </Grid>
</Window>
